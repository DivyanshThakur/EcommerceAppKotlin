<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:background="#0000ff"
        android:orientation="vertical">

    <ImageView android:layout_width="match_parent"
               android:layout_height="200dp"
               android:src="@drawable/welcome"
               android:layout_margin="20dp"
    />

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="E-Mail"
              android:drawableRight="@drawable/email"
              android:background="#FF7E00"
              android:id="@+id/edtSignUpEmail"
              android:layout_marginTop="20dp"
              android:ems="10"
              android:inputType="textEmailAddress"
              android:layout_margin="5dp"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Username"
              android:drawableRight="@drawable/user"
              android:background="#FF7E00"
              android:id="@+id/edtSignUpUsername"
              android:layout_marginTop="10dp"
              android:ems="10"
              android:inputType="text"
              android:layout_margin="5dp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Password"
              android:drawableRight="@drawable/password"
              android:background="#FF7E00"
              android:id="@+id/edtSignUpPassword"
              android:layout_marginTop="10dp"
              android:ems="10"
              android:inputType="textPassword"
              android:layout_margin="5dp"/>
    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:hint="Confirm Password"
              android:drawableRight="@drawable/spell_check"
              android:background="#FF7E00"
              android:id="@+id/edtSignUpConfirmPassword"
              android:layout_marginTop="10dp"
              android:ems="10"
              android:inputType="textPassword"
              android:layout_margin="5dp"/>
    <Button
            android:text="SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignUpSA"
            android:background="#6f00ff"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:textColor="#fff"
    />

    <Button
            android:text="LogIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogInSA"
            android:background="#10ff00"
            android:textSize="30sp"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
    />

</LinearLayout>