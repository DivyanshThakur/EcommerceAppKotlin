<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="45dp" android:id="@+id/radioGroup">
        <RadioButton
                android:text="Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/largeRB" android:layout_weight="1"/>
        <RadioButton
                android:text="Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/mediumRB" android:layout_weight="1"/>
        <RadioButton
                android:text="Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/smallRB" android:layout_weight="1"/>
    </RadioGroup>
    <TextView
            android:text="Size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/text" android:layout_marginTop="73dp"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>