<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView android:layout_width="150dp" android:layout_height="150dp"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:id="@+id/rv_row_productImage"
               android:layout_margin="20dp"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Id"
              android:textSize="30sp"
              android:layout_toRightOf="@+id/rv_row_productImage"
              android:id="@+id/rv_row_pId"
              android:layout_margin="5dp"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Name"
              android:textSize="30sp"
              android:layout_toRightOf="@+id/rv_row_productImage"
              android:id="@+id/rv_row_pName"
              android:layout_below="@id/rv_row_pId"
              android:layout_margin="5dp"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Price"
              android:textSize="30sp"
              android:layout_toRightOf="@+id/rv_row_productImage"
              android:id="@+id/rv_row_pPrice"
              android:layout_below="@id/rv_row_pName"
              android:layout_margin="5dp"
    />

</RelativeLayout>